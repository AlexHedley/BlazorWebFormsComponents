@inherits TestComponentBase

<Fixture Test="FirstTest">
	<ComponentUnderTest>
		<BlazorWebFormsComponents.Repeater Items="Widget.SimpleWidgetList"
							ItemType="Widget"
							Context="Item">
			<ItemTemplate><span>@Item.Name</span></ItemTemplate>
			<AlternatingItemTemplate><b>@Item.Name</b></AlternatingItemTemplate>
		</BlazorWebFormsComponents.Repeater>
	</ComponentUnderTest>
</Fixture>


@code {

	void FirstTest(IRazorTestContext context)
	{

		var cut = context.GetComponentUnderTest();

		var itemCountShouldBe = (int)Math.Ceiling(Widget.SimpleWidgetList.Length / 2.0m);
		var alternatingItemCountShouldBe = Widget.SimpleWidgetList.Length - itemCountShouldBe;

		cut.FindAll("span").Count().ShouldBe(itemCountShouldBe);
		cut.FindAll("b").Count().ShouldBe(alternatingItemCountShouldBe);

	}


}
